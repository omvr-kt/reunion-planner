<%- include('../../partials/header', { customClass: 'auth-page' }) %>
<style>
    main.container.auth-page {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
    }
</style>
<div class="auth-container">
    <div class="row w-100 mx-0 mt-0 mb-3">
        <div class="col-12 col-xl-11 mx-auto px-0">
            <div class="card auth-card" style="box-shadow: 0 15px 30px rgba(0,0,0,0.1); border-radius: 1rem; overflow: hidden; max-width: 100%; width: 100%;">
                <div class="card-body p-0">
                    <div class="px-4 px-lg-5 py-5" style="padding-top: 2.5rem; padding-bottom: 2.5rem;">
                        <h2 class="text-center mb-5" style="font-size: 2.4rem; font-weight: 700; color: var(--primary);">Créer un compte</h2>
                        
                        <form action="/auth/register" method="POST" class="auth-form" id="register-form" style="max-width: 850px; margin: 0 auto;">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label for="first_name" class="form-label">Prénom</label>
                                        <input type="text" class="form-control form-control-lg" id="first_name" name="first_name" placeholder="Votre prénom" required style="font-size: 1.2rem; padding: 1rem 1.5rem; border-radius: 0.75rem;">
                                    </div>
                                    
                                    <div class="col-md-6 mb-4">
                                        <label for="last_name" class="form-label">Nom</label>
                                        <input type="text" class="form-control form-control-lg" id="last_name" name="last_name" placeholder="Votre nom" required style="font-size: 1.2rem; padding: 1rem 1.5rem; border-radius: 0.75rem;">
                                    </div>
                                </div>
                                
                                <div class="mb-4">
                                    <label for="email" class="form-label">Adresse email</label>
                                    <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="nom@exemple.com" required style="font-size: 1.2rem; padding: 1rem 1.5rem; border-radius: 0.75rem;">
                                </div>
                                
                                <div class="mb-4">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Choisissez un mot de passe" required style="font-size: 1.2rem; padding: 1rem 1.5rem; border-radius: 0.75rem;">
                                </div>
                                
                                <div class="mb-4">
                                    <label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
                                    <input type="password" class="form-control form-control-lg" id="confirm_password" name="confirm_password" placeholder="Répétez votre mot de passe" required style="font-size: 1.2rem; padding: 1rem 1.5rem; border-radius: 0.75rem;">
                                </div>
                                
                                <div class="form-check form-check-lg mt-4 mb-5">
                                    <input type="checkbox" class="form-check-input" id="is_organizer" name="is_organizer" style="width: 1.2rem; height: 1.2rem; margin-top: 0.25rem;">
                                    <label class="form-check-label" for="is_organizer" style="font-size: 1.1rem; padding-left: 0.5rem;">
                                        Je souhaite organiser des réunions
                                    </label>
                                </div>
                                
                                <div class="d-grid gap-2 mt-5">
                                    <button type="submit" class="btn btn-primary btn-lg py-4" style="font-size: 1.2rem; font-weight: 700;">
                                        <i class="bi bi-person-check mr-2"></i>Créer mon compte
                                    </button>
                                </div>
                            </form>
                            
                            <div class="text-center mt-5">
                                <p class="mb-0" style="font-size: 1.1rem;">Déjà inscrit ? <a href="/auth/login" class="fw-bold">Se connecter</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>